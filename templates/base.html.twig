<!DOCTYPE html>
<html>
    <head>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid">
            <div class="row" style="margin-top:60px;">
		        <div class="col-md-12">
			        <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-dark bg-dark fixed-top">
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="navbar-nav">
                                {% block pageActive %} 
                                    
                                {% endblock %}
                            </ul>
                            <ul class="navbar-nav ml-md-auto">
                                <li class="nav-item">
                                    {% if is_granted('ROLE_ADMIN') %}
                                    {% block boutonAdminFormation %}
                                      <a class="nav-link" href="{{path('formation_index')}}">Gérer les formations</a>
                                    {% endblock %}
                                    {% endif %}
                                </li>
                                {% if is_granted('ROLE_USER') %}
                                    <li class="nav-item active">
                                    <a class="nav-link" href="{{path('app_logout')}}">
                                        Bonjour {{ app.user.prenom }}
                                        <i class="icon-user"></i>
                                        | Déconnexion
                                        <span class="sr-only">(current)</span></a>
                                    </li>
                                {% else %}
                                    <li class="nav-item active">
                                    <a class="nav-link" href="{{path('app_login')}}">
                                        <i class="icon-user"></i>
                                        Connexion
                                        <span class="sr-only">(current)</span></a>
                                {% endif %}
                            </ul>
                        </div>
                    </nav>
                    <h3>
                        {% block titrePage %} Saisir un titre {% endblock %} 
                    </h3>
                </div>
            </div>
            {% block body %}
            <div class="row">
                <style type=text/css>
                    table tbody tr:nth-child(odd) { background-color: #d7d7d7; }
                </style>
                <div class="col-md-12">
                    <table class="table">
                        {% block affichageTab %}
                        Entrer les titres
                        {% endblock %}
                        <tbody>
                            {% block baliseTr %}
                            
                            {% endblock %}
                        </tbody>
                    </table>
            </div>
            {% endblock %}
            {% block footer %}
            <div class="row" style="position: relative;bottom: 0;width: 100%;height: 160px;text-align: center;">
                <div class="col-md-3 align-self-center">
                    <p>
                        <img alt="Bootstrap Image Preview" src="https://www.iutbayonne.univ-pau.fr/sites/default/files/logos/logo%20iut%202018%20h.jpg" width=180 height=75 />
                    </p>
                </div>
                <div class="col-md-5 align-self-center">
                    <!-- //Vide volontaire pour affichage plus propre-->
                </div>
                <div class="col-md-4 align-self-center">
                    <p class="text-secondary">
                        Damien Serrano étudiant en DUT Informatique
                    </p>
                </div>
                </div>
            </div>
            {% endblock %}
        </div>
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
