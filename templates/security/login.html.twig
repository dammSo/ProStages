    </li>	
{% endblock %}

{% block titrePage %} Identifiez-vous ! {% endblock %} 

{% block affichageTab %}  {% endblock %} 

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Bienvenue <span class="badge badge-pill badge-dark">{{ app.user.prenom }} {{ app.user.nom }}</span>, <a href="{{ path('app_logout') }}">DÃ©connexion</a>
        </div>
    {% else %}
        <div class="row">
            <div class="col-md-12">
                <label for="inputEmail">Email</label><br>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus><br>
                <label for="inputPassword">Mot de passe</label><br>
                <input type="password" name="password" id="inputPassword" class="form-control" required><br>
            </div>
        </div>
        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >
        <br>

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-dark btn-primary" type="submit">
            Se connecter
        </button>
    {% endif %}
</form>
{% endblock %}